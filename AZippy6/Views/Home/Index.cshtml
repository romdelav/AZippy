@{
    <!--sets the title view to Home Page-->
    ViewData["Title"] = "Home Page";
}
@*Romain: added style tag pairs to format text description*@
<style>
 @*Romain*@
    .txstyle1 { @*Romain*@
        font-weight: 700; @*Romain*@
    } @*Romain*@
    body { @*Romain*@
        text-align: justify; @*Romain*@
